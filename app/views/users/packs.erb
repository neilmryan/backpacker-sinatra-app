<% if current_user == @user %>

  <h2><a href="/users/<%=@user.slug%>">Visit Your Profile Page!</a></h2>
  <h2>Your Packs<a href="/packs/new">Create New Pack</a></h2>

  <% @packs.each do |pack| %>
    <% if pack.image_url %>
      <img src="<%= pack.image_url %>" alt="pack pic">
    <% end %>
    <h2><a href="/packs/<%= pack.id %>"><%=pack.trip_name%></a></h2>
  <% end %>

<% else %>
  <h2><a href="/users/<%=@user.slug%>">Visit <%=@user.username%>'s Profile Page!</a></h2>
  <h2><%= @user.username %>'s Packs</h2>

  <% @packs.each do |pack| %>
    <% if pack.image_url %>
      <img src="<%= pack.image_url %>" alt="pack pic">
    <% end %>
    <h2><a href="/packs/<%= pack.id %>"><%=pack.trip_name%></a></h2>
  <% end %>

<% end %>
