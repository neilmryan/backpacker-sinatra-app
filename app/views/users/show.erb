<h2 id="un"><%= @user.username %></h2>

<% if current_user == @user %>
  <a href="/profile_img_edit">New Profile Image</a>
  <a href="/bio_edit">Edit Bio</a>

  <figure>
    <img id="profile_pic" src="<%= @user.image_url %>" alt="profile picture">
    <h2 id="bio"><%= "\"#{@user.bio}\""%></h2>
  </figure>

  <h2><a href="<%= @user.slug %>/packs">Visit Your Packs Page!</a></h2>
  <h2>Your Items<a href="/items/new">Create New Item</a></h2>

  <% @user.items.each do |item| %>
    <figure>
      <img src="<%= item.image_url %>" alt="item picture">
    </figure>
    <h2><a href="/items/<%= item.id %>"><%= item.name %></a></h2>
  <% end %>

<% else %>

  <figure>
    <img id="profile_pic" src="<%= @user.image_url %>" alt="profile picture">
    <h2 id="bio"><%= "\"#{@user.bio}\""%></h2>
  </figure>

  <h2><a href="<%= @user.slug %>/packs">Visit <%= @user.username %>'s Packs Page!</a></h2>
  <h2 id="inv"><%= @user.username %>'s Items</h2>

  <% @user.items.each do |item| %>
  <figure>
    <img src="<%= item.image_url %>" alt="item picture">
  </figure>
  <h2><a href="/items/<%= item.id %>"><%= item.name %></a></h2>
  <% end %>

<% end %>
